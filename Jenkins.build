@Library(value='iow-ecs-pipeline@1.1.0', changelog=false) _

pipeline {
    agent {
        node {
            label 'project:any'
        }
    }
    parameters {
        choice(choices: ['snapshots', 'releases'], description: 'type of build', name: 'BUILD_TYPE')
    }
    triggers {
        pollSCM('H/5 * * * *')
    }
    stages {
        stage('build artifact') {
            steps {
                dockerPipeline()
            }
        }
    }
}
